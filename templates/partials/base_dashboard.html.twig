<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<div class="containerDashboard">
			<div class="header">
				<nav class="navbar navbar-expand-lg navbar-light bg-light">
					<div class="container-fluid d-flex justify-content-end px-5">
						<div class="dropdown ">
							<button class="btn  dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
								<img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img (31).webp" class="rounded-circle" height="35" alt="Avatar" loading="lazy"/>
							</button>
							<ul class="dropdown-menu mr-5" aria-labelledby="dropdownMenuButton1">
								<li>
									<a class="dropdown-item" href="#">Mon Profil</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">Paramètres</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path("app_logout") }}">Déconnexion</a>
								</li>
							</ul>
						</div>
					</div>
				</nav>
			</div>
			<div class="Nav bg-primary ">
				<div class="row">
					<div class="p-5 d-flex justify-content-center">
						<div class="p-5 bg-success rounded">Logo</div>
					</div>
				</div>
			</div>
			<div class="Main "> {% block body %}{% endblock %}
				</div>
			</div>
		</body>
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
	</html>
