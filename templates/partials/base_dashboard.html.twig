<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}{% endblock %}
		</title>
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<div
			class="containerDashboard">
			{# header #}
			<div class="header">
				<nav class="navbar navbar-expand-lg navbar-light bg-light">


					<div class="container-fluid d-flex justify-content-between align-items-center  px-5">
						<div class="">
							<div id="hamburger" onclick="this.classList.toggle('open');">
								<svg width="50" height="50" viewbox="0 0 100 100">
									<path class="line line1" d="M 20,29.000046 H 80.000231 C 80.000231,29.000046 94.498839,28.817352 94.532987,66.711331 94.543142,77.980673 90.966081,81.670246 85.259173,81.668997 79.552261,81.667751 75.000211,74.999942 75.000211,74.999942 L 25.000021,25.000058"/>
									<path class="line line2" d="M 20,50 H 80"/>
									<path class="line line3" d="M 20,70.999954 H 80.000231 C 80.000231,70.999954 94.498839,71.182648 94.532987,33.288669 94.543142,22.019327 90.966081,18.329754 85.259173,18.331003 79.552261,18.332249 75.000211,25.000058 75.000211,25.000058 L 25.000021,74.999942"/>
								</svg>
							</div>
						</div>
						<div class="dropdown ">
							<button class="btn  dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
								<img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img (31).webp" class="rounded-circle" height="35" alt="Avatar" loading="lazy"/>
							</button>
							<ul class="dropdown-menu mr-5" aria-labelledby="dropdownMenuButton1">
								<li>
									<a class="dropdown-item" href="#">Mon Profil</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">Paramètres</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path("app_logout") }}">Déconnexion</a>
								</li>
							</ul>
						</div>
					</div>
				</nav>
			</div>
			{# Side navbar #}
			<div class="Nav bg-primary overflow-hidden ">
				<div class="row">
					<div class="p-4 d-flex justify-content-center">
						<div class="p-5 bg-success rounded">Logo</div>
					</div>
					<div class="p-2 info-user d-flex flex-column justify-content-center align-items-center">
						<p>{{app.user.username|upper}}</p>
						<p>{{app.user.email}}</p>
					</div>
				</div>
				<div class="row mb-3 p-1">
					<div class="d-flex justify-content-center border-bottom p-2">
						<a href="{{ path("app_dashboard")}}">
							<div class="fs-5">Tableau de bord</div>
						</a>
					</div>
				</div>
				<div class="row">
					<div class="accordion" id="accordionExample">
						<div class="accordion-item">
							<h2 class="accordion-header" id="headingTwo">
								<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
									<a href="">Vos Comptes</a>
								</button>
							</h2>
							<div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
								<div class="accordion-body ">
									{% for account in BankAccounts %}
										<div class="d-flex justify-content-between align-items-center flex-nowrap">
											<a href="{{ path("app_bank_account" , { 'BankAccountId': account.id }) }}">
												<span class="d-block">{{ account.name }}</span>
											</a>

											<div class="dropdown">
												<button class="btn " type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
													...
												</button>
												<ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
													<li>
														<button class="dropdown-item" type="button">Archiver le compte</button>
													</li>
													<li>
														<button class="dropdown-item" type="button">Supprimer le action</button>
													</li>
													<li>
														<button class="dropdown-item" type="button">Something else here</button>
													</li>
												</ul>
											</div>

										</div>
									{% endfor %}
								</div>
							</div>
						</div>
					</div>

					{% if BankAccount is defined %}
						{% if BankAccount is not empty %}
							{% if cycle is defined and cycle is not empty %}

								<div class="row mt-3 ">
									<div class="d-flex justify-content-center p-2 ">
										<div class="fs-5 ">Gestion</div>
									</div>
								</div>
								<div class="p-2 d-flex flex-column justify-content-center align-items-center ">
									<div class="row no-gutters">
										<div class="bg-primary bg-gradient text-center p-2">
											<a class="" href="{{ path("app_cycle_index" , { "BankAccountId" : BankAccount.id }) }}">
												Pèriode
											</a>
										</div>
										<div class="bg-primary bg-gradient text-center p-2">
											<a class="" href="{{ path("app_transaction_index" , { "CycleId" : cycle.id }) }}">
												Transaction
											</a>
										</div>
										<div class="bg-primary bg-gradient text-center p-2">
											<a href="{{path("app_category_index" , {"CycleId": cycle.id})}}">
												Categorie
											</a>
										</div>
										<div class="bg-primary bg-gradient text-center p-2">
											<a href="">
												Budget
											</a>
										</div>

									</div>
								</div>
							{% endif %}
						{% endif %}

					{% endif %}
				</div>
			</body>
		</body>
	</body>
</html></body></html></div><div class="Main "> {% block body %}{% endblock %}</div></div></body><script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script><script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script></html></body></html>
