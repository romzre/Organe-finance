{% extends 'partials/base_dashboard.html.twig' %}

{% block title %}New Category
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<h1 class="text-primary border-bottom border-warning">Compte : {{BankAccount.name}} > Catégories</h1>
		</div>
				<div class="row">
			<nav class="d-flex justify-content-start" style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="{{ path("app_bank_account" , {"BankAccountId": BankAccount.id} )}}">{{BankAccount.name}}</a>
					</li>
					<li class="breadcrumb-item active" aria-current="page">Catégories</li>
				</ol>
			</nav>
		</div>
		<div class="row">
			<h2>Catégorie</h2>
		</div>
		<div class="row p-2">
			<div class="col-6 d-flex flex-column justify-content-center shadow border rounded-3 p-4">
				<h3>Nouvelle catégorie</h3>
				{{form_start(form)}}
				<div class="form-group">
					{{ 
                        form_row(form.Label, {'label' : 'Nom'})
																																																												}}
				</div>
				<div class="form-group">
					{{ 
                        form_row(form.Color, {'label' : 'Choix de la couleur'})
																																																												}}
				</div>
				<div class="d-flex justify-content-between">
					<a href="{{ path('app_category_index', {"CycleId" : cycle.id }) }}">
						<button type="button" class="btn btn-secondary">Annuler</button>
					</a>
					<button type="submit" class="btn btn-primary">Enregistrer</button>
				</div>
				{{form_end(form)}}
			</div>
		{% endblock %}
